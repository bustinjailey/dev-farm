# Use symlinks for node_modules (default, but explicit)
symlink=true

# Hoist all dependencies to workspace root to reduce duplication
hoist=true
hoist-pattern[]=*

# Use strict peer dependencies
strict-peer-dependencies=false

# Shamefully hoist to avoid phantom dependencies issues
shamefully-hoist=true

# Auto-install peers
auto-install-peers=true

# Store location (optional, defaults to ~/.pnpm-store)
# store-dir=.pnpm-store
