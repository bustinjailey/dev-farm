{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "@shared/*": ["../src/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.svelte", "../src/types.ts"],
  "exclude": ["node_modules", "dist"]
}
