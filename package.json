{
  "name": "dev-farm",
  "version": "1.0.0",
  "private": true,
  "description": "On-demand development environments powered by VS Code Remote Tunnels",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter dashboard dev",
    "dev:kill": "./scripts/kill-dev.sh",
    "dev:restart": "pnpm run dev:kill && pnpm run dev",
    "dev:server": "pnpm --filter dashboard dev:server",
    "dev:client": "pnpm --filter dashboard dev:client",
    "build": "pnpm --filter docker build && pnpm --filter dashboard build",
    "build:dashboard": "pnpm --filter dashboard build",
    "build:docker": "pnpm --filter docker build",
    "build:server": "pnpm --filter dashboard build:server",
    "build:client": "pnpm --filter dashboard build:client",
    "start": "pnpm --filter dashboard start",
    "clean": "pnpm --filter dashboard clean && pnpm --filter docker clean",
    "lint": "pnpm --filter dashboard lint",
    "check": "pnpm --filter dashboard check",
    "test": "pnpm --filter dashboard test",
    "test:watch": "pnpm --filter dashboard test:watch",
    "e2e": "pnpm --filter dashboard test:e2e",
    "e2e:no-server": "pnpm --filter dashboard test:e2e:no-server",
    "e2e:ui": "pnpm --filter dashboard test:e2e:ui",
    "e2e:headed": "pnpm --filter dashboard test:e2e:headed",
    "e2e:debug": "pnpm --filter dashboard test:e2e:debug",
    "docker:build": "docker compose build",
    "docker:build:code-server": "pnpm --filter docker build:code-server",
    "docker:build:terminal": "pnpm --filter docker build:terminal",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "deploy": "pnpm run build && pnpm run docker:build && pnpm run docker:restart"
  },
  "keywords": [
    "docker",
    "vscode",
    "development-environment",
    "remote-tunnels"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
